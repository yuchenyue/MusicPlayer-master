<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/bottom_color"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/main_image"
        android:layout_width="60dp"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/main_musicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:text="歌曲名称"
        android:textColor="@color/textcolor"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/main_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="60dp"
        android:text="歌手名称"
        android:textColor="@color/textcolor" />

    <ImageView
        android:id="@+id/main_up"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@+id/main_pause_play"
        android:src="@mipmap/ic_up" />

    <ImageView
        android:id="@+id/main_pause_play"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@+id/main_next"

        android:src="@mipmap/ic_stop" />

    <ImageView
        android:id="@+id/main_next"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_next" />

</RelativeLayout>



