<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:layout_width="110dp"
    android:layout_height="130dp"
    android:layout_margin="3dp"
    android:background="@drawable/songsheet_item">

        <ImageView
            android:id="@+id/image_let"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/default_cover"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"/>

        <manage.MyTextView
            android:id="@+id/let_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/image_let"
            android:layout_below="@+id/image_let"
            android:text="专辑"
            android:textColor="@color/textcolor"
            android:textSize="13dp"
            android:textStyle="normal|bold|italic"
            android:ellipsize="marquee"
            android:focusable="true"
            android:maxEms="5"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/let_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建者"
            android:textSize="12dp"
            android:textColor="@color/textcolor"
            android:layout_gravity="left|bottom"
            android:layout_below="@+id/let_name"
            android:layout_alignStart="@+id/let_name"
            android:ellipsize="marquee"
            android:focusable="true"
            android:maxEms="12"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"/>

        <!--<TextView-->
            <!--android:id="@+id/let_songnum"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="歌曲数"-->
            <!--android:textSize="12sp"-->
            <!--android:textColor="@color/textcolor"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_marginLeft="100dp"-->
            <!--android:layout_marginBottom="5dp"/>-->

        <TextView
            android:id="@+id/let_playnum"
            android:layout_width="90dp"
            android:layout_height="15dp"
            android:text="播放数"
            android:textColor="#ccc"
            android:background="#b3505050"
            android:textSize="10sp"
            android:layout_above="@+id/let_name"
            android:layout_centerHorizontal="true"
            android:paddingLeft="5dp"/>

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_marginLeft="60dp"-->
            <!--android:background="#d7d5d5"-->
            <!--android:id="@+id/view"/>-->
        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/item_let"
            android:layout_alignBottom="@+id/let_author"
            android:layout_alignEnd="@+id/image_let"
            android:background="@drawable/ic_music_list_icon_more"/>


</RelativeLayout>
